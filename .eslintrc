{
	"env": {
		"browser": true,
		"node": true,
		"es2021": true,
	},
	"extends": [
		"eslint:recommended", // Base set of recommended ESLint rules
		"plugin:cypress/recommended", // Cypress recommended rules
		"plugin:prettier/recommended", // Prettier recommended rules
	],
	"parserOptions": {
		"ecmaVersion": 12, // Use ECMAScript 2021 features
		"sourceType": "module", // Allow ES6 modules
	},
	"plugins": [],
	"rules": {
		"semi": ["error", "always"], // Enforce semicolons at the end of statements
		"no-unused-vars": "warn", // Warn about unused variables
		"eqeqeq": "error", // Enforce strict equality (===) over loose equality (==)
		"no-console": "warn", // Warn about console logs
		"indent": ["error", 2], // Enforce 2-space indentation
		"cypress/no-unnecessary-waiting": "warn", // Disable unnecessary waiting rule
		"cypress/no-assigning-return-values": "error", // Disable assigning return values rule
		"cypress/no-async-tests": "error", // Disable async tests rule
		"cypress/no-force": "warn", // Disable force rule
	},
}
